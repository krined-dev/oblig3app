<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    >

    <TextView
        android:id="@+id/patient_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        />

    <Button
        android:id="@+id/register_symptom_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:paddingLeft="10dp"
        android:text="@string/register_symptoms_button"
        android:paddingRight="10dp"
        android:textSize="10sp"
    />


    <Button
        android:id="@+id/update_patient_button"
        android:layout_width="wrap_content"
        android:minWidth="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="@string/update_pat_button"
        android:paddingRight="10dp"
        android:textSize="10sp"
    />


    <Button
        android:id="@+id/delete_patient_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="0dp"
        android:paddingLeft="10dp"
        android:text="@string/delete_patient_button"
        android:paddingRight="10dp"
        android:textSize="10sp"
    />

</LinearLayout>